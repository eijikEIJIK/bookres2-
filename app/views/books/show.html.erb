<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/user_info', user: @book.user %>
    <hr>
    <%= render 'books/new', book_new: @book_new %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <p><%= @book.body %></p>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
        </td>
        <% end %>
      </tr>
    </table>

    <div>
      <p>コメント件数：<%= @book.book_comments.count %></p>
      <% @book.book_comments.each do |comment| %>
        <p><%= image_tag comment.user.get_profile_image %></p>
        <%= comment.user.name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
      <% end %>
    </div>
    <div>
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>

  </div>
</div>
</div>