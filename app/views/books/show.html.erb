<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'users/user_info', user: @book.user %>
    <hr>
    <%= render 'books/new', book_new: @book_new %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <p><%= @book.body %></p>
        </td>
        <td>
          <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <span><i class="fa-solid fa-heart"></i></span><%= @book.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <span><i class="fa-solid fa-heart"></i></span><%= @book.favorites.count %>
              <% end %>
            </p>
          <% end %>
        </td>
        <td>
          <p>コメント数:<%= "#{@book.book_comments.count}" %></p>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
        </td>
        <% end %>
      </tr>
    </table>
    <div>

    <% @book.book_comments.each do |comment| %>
    <div class="row">
      <div class="col-auto">
        <%= link_to user_path(comment.user.id) do %>
          <%= image_tag comment.user.get_profile_image %><br>
          <%= comment.user.name %>
        <% end %>
      </div>
      <div class="col-auto align-self-center">
        <%= comment.comment %>
        <% if comment.user == current_user  %>
          <%= link_to "Destroy", book_book_comment_path(comment.book, comment), method: :delete,class:'btn btn-danger' %>
        <% end %>
      </div>
    </div>
    <br>
    <% end %>
    </div>
    <div class="form-group">
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class:'form-control' %>
        <br>
        <%= f.submit "Comment", class:'btn btn-secondary' %>
      <% end %>
    </div>

  </div>
</div>
</div>